<% require 'version' %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:name=>"login_form"}) do |f| %>
  <!-- Uncomment for VSAC username password-->
  <!-- %= render :partial => "devise/sessions/vsac_auth" % -->
  <div class="fields">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="fields">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="accountError">
    <%= devise_error_messages! %>
  </div>
  <div class="actions">
    <button type="submit" class="btn btn-success"><span>Login</span></button>
  </div>

  <div class="links">
    <%= render :partial => "devise/shared/links" %>
  </div>
<% end %>
